{
  "manifest_version": 2,
  "name": "Attendance Insights",
  "version": "1.0",
  "description": "Track and analyze your attendance with detailed insights",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "icon48.png",
    "icon128.png"
  ]
} 